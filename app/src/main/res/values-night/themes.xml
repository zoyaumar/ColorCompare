<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ColorCompare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color_light</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/background_color_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color_light</item>
        <item name="colorSecondaryVariant">@color/accent_color</item>
        <item name="colorOnSecondary">@color/background_color_dark</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_color_dark</item>
        <item name="colorSurface">@color/card_background_dark</item>
        <item name="colorOnSurface">@color/primary_text_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_color_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/primary_text_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_dark</item>
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/CustomMaterialButton</item>
    </style>

    <!-- Custom Material Button Style for Dark Theme -->
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Custom Outlined Button Style for Dark Theme -->
    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>